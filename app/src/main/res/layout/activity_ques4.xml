<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp"
    tools:context="com.example.pooja.kbc.ques4">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/kbc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="294dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="205dp"
        android:text="Pongal is popular festival of which state"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="70dp"
        android:text="Tamil Nadu"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karnataka"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button19"
        android:layout_alignBottom="@+id/button19"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:id="@+id/button21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kerala"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_below="@+id/button19"
        android:layout_alignStart="@+id/button19" />

    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assam"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_below="@+id/button20"
        android:layout_alignStart="@+id/button20" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:hint="Score:"
        android:textSize="25sp"
        android:inputType="textPersonName" />

</RelativeLayout>
